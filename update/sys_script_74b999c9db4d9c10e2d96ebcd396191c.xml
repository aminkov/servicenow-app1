        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
var total_price = 0;
var id = current.getValue('order_details');
var rec = new GlideRecord('x_nuvo_amapp_active_menu');
rec.addQuery('sys_id', 'IN', id);
rec.query(); 
while(rec.next()) { 
